<menu><%= link_to 'All tasks', tasks_path %></menu>
<h1>Edit: <%= @task_edit.title %></h1>

<%= form_with model: @task_edit do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_area :details, size: "35x3"%>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit "Save task" %>
<% end %>
